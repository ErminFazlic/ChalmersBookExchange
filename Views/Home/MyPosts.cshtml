@page
@model ChalmersBookExchange.Domain.Post
@using ChalmersBookExchange.Controllers
@using Microsoft.AspNetCore.Identity

@inject IUserController _userController
@inject IPostController _postController

@inject UserManager<IdentityUser> UserManager

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="@Url.Content("~/css/favorite.css")">

<h1>My Posts</h1>
<div>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Book Name</th>
            <th>Course Code</th>
            <th>Price</th>
            <th>Location</th>
            <th>Shippable</th>
            <th>Meetup</th>
            <th></th>
            <th></th>            
        </tr>
        </thead>
        <tbody>
         

             @foreach (var post in _postController.GetMyPosts(_userController.RetrieveID(@User.Identity.Name)))
             {
                 <tr>
                     <td>@post.BookName</td>
                     <td>@post.CourseCode</td>
                     <td>@post.Price:-</td>
                     <td>@post.Location</td>
                @if (post.Shippable)
                {
                    <td align = "center"> &#x2714</td>
                }
                else
                {
                    <td align = "center"> &#10008</td>
                }
                @if (post.Meetup)
                {
                    <td align = "center"> &#x2714</td>
                }
                else
                {
                    <td align = "center"> &#10008</td>
                }
                <td> <a asp-action="Delete" asp-route-id="@post.ID">
                    <button class="btn" id="removeButton"> Remove Post</button>
                </a></td>
                <td> <a asp-action="EditPost" asp-route-id="@post.ID">
                    <button class="btn" id="EditButton" onclick="popupText()">
                        <i class="fa fa-edit"></i>
                    </button>   
                </a></td>

                 </tr>
             
             }  
      
        </tbody>
</table>

</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
     
}


   
